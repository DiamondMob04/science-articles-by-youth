<link rel="stylesheet" href="/css/header.css">
<div id="header">
    <div id="header__topbar">
        <div id="title">
            <img src="/img/favicon.png">
            <h1>Science Articles by Youth</h1>
        </div>
    </div>
    <div id="header__nav">
        <a href="/home">Home</a>
        <a href="/blog">Blog</a>
        <a href="/journal">SAY Journal</a>
        <a href="/contact">Contact Us</a>
        <div class="nav__dropdown">
            <a>The Team</a>
            <div class="nav__links">
                <a href="/executive-board">Executive Board</a>
                <a href="/members">Members</a>
            </div>
        </div>
        <div class="nav__dropdown">
            <a>Account</a>
            <div class="nav__links">
                <a class="not-logged-in" href="/register">Register</a>
                <a class="not-logged-in" href="/login">Login</a>
                <a class="account-name" href="/account">Account</a>
            </div>
        </div>
    </div>
    <div class="dropdown">
        <span id="open-dropdown"></span>
        <div id="header__dropdown">
            <a href="/home">Home</a>
            <a href="/blog">Blog</a>
            <a href="/journal">SAY Journal</a>
            <a href="/contact">Contact Us</a>
            <div class="side-by-side">
                <a href="/executive-board">Executive Board</a>
                <a href="/members">Members</a>
            </div>
            <div class="side-by-side">
                <a class="not-logged-in" href="/register">Register</a>
                <a class="not-logged-in" href="/login">Login</a>
                <a class="account-name" href="/account">Account</a>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(() => {
        $("#open-dropdown").click(() => {
            if ($("#header__dropdown").css("display") == "none") {
                $("#header__dropdown").css({display: "flex", flexDirection: "column"})
            } else {
                $("#header__dropdown").css({display: "none"})
            }
        })
        fetch("/info").then(async (res) => {
            if (res.ok) {
                try {
                    let info = await res.json()
                    $(".account-name").text(info.username)
                     $(".not-logged-in").css({display: "none"})
                } catch (error) {
                    $(".account-name").css({display: "none"})
                }
            } else {
                $(".account-name").css({display: "none"})
            }
        })
    })
</script>